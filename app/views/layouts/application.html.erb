<!DOCTYPE html>
<html>
  <head>
    <title>NearbyThis</title>
    <%= stylesheet_link_tag :all, "token-input-facebook" %>
    <%= yield :stylesheets %>  
    <%= javascript_include_tag :defaults, "jquery.tokeninput" %>
    <%= yield :javascripts %>  
    <%= csrf_meta_tag %>
  </head>
  <body onload="<%= "load()" unless location.nil? %>" onunload="GUnload();">
    <div class="container">
      <% unless params[:action].eql?("details") %>
        <div class="auth">
          <%= link_to "Home", "/" %> || 
          <% if current_user.blank? %>
            <%= link_to "Login", "/users/sign_in" %>
          <% else %>            
            <% if current_user.role == "Promoter" or current_user.role == "Admin" %>
              <%= link_to "Events", "/events" %> || 
            <% end %>

            <% if current_user.role == "Admin" %>
              <%= link_to "Advertises", "/advertises" %> || 
              <%= link_to "Users", "/users" %> || 
            <% end %>
            <% if current_user.role == "User" or current_user.role == "Admin" %>
              <%= link_to "Signup Location", "/signup" %> || 
            <% end %>
            <%= link_to "Logout", destroy_user_session_path, :method => :delete %>
          <% end %>
        </div>
      <% end %>
      <div class="span-24">
        <% unless params[:action].eql?("details") %>
          <div id= "header-logo" class="span-24">
            <img src="http://stpaulshomecoming.com/images/header1.jpg" />
          </div>        
        <% end %>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
