<div class="span-15" style="float: left;">
  <div class="whitebox">        
    <%= render 'search' %>            
    <div id="locations">
      <%= render 'locations' %>   
    </div>        
    <div id="near_your_locations">
      <%= render 'near_your_locations' %>
    </div>
  </div>
</div>
<div style="float: right;">
  <%= render 'map' %>
  <div style="padding-left:10px;margin-top: 210px;border-color: beige;border-style:solid;border-width:5px;">
    <h2>Events</h2>
    <% @events.each do |event| %>
    <b><%= event.name %> -  <%= event.address %></b><br/>
      <%= event.description %><br/><br/>
    <% end %>
  </div>
</div>


