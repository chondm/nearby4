<% content_for :javascripts do %>
  <script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?sensor=true"></script>    
  <script type="text/javascript">    
    function initialize() {
      var latlng = new google.maps.LatLng(<%= location['lat'] %> , <%= location['lng'] %>);
    
      var myOptions = {zoom: 18, center: latlng, mapTypeId: google.maps.MapTypeId.ROADMAP};
 
      var map = new google.maps.Map(document.getElementById("map_canvas"), myOptions);    
        
      
      var myLatLng = new google.maps.LatLng(<%= location['lat'] %>, <%= location['lng'] %>);
  
      var marker = new google.maps.Marker({position: myLatLng, map: map, title: 'Click me' });
  
      var contentString  = "<b><%= raw business_name %></b> <%= rating_info %> \n";
      
      if ("<%= twitter_feed %>" !=  "") {
        contentString += "<table style='width:400px;margin-bottom:0px !important;'><tr><td><img src='/images/twitter-logo.jpg'/></td>";
        contentString += "<td><a href=\"http://twitter.com/<%= @last_tweet.first['user']['screen_name'] %>/status/<%= @last_tweet.first['id'] %>\" target=\"_blank\"><%= twitter_feed %></a></td></tr></table>";
      }
          
      if ("<%= facebook_feed %>" !=  "") {
        contentString += "<table style='width:400px;margin-bottom:0px !important;'><tr><td><img src='/images/facebook-logo.png'/></td>"
        contentString += "<td><a target='_blank' href='http://www.facebook.com/<%= @location.facebook_page_id  unless @location.blank? %>'><%= facebook_feed %></a></td></tr></table>";
      }
      
      var infowindow = new google.maps.InfoWindow({ content: contentString, position: latlng});
        
      infowindow.open(map, marker); 
    }
  </script>
<% end %>

<div id="detail">  
  <br/><br/>
  <div class="back_index"><%= link_to 'Back', locations_path %></div>
  <div id="map_canvas"></div>
  <% unless @user_saying.blank? %>
    <div id="people_saying">
      <table class="tweet_result">      
        <% @user_saying['results'].first(8).each do |user_say| %>
            <tr>
              <td>
                <a href="http://twitter.com/<%= user_say['chescababy'] %>" target="_blank">
                  <img src="<%= user_say["profile_image_url"] %>" />
                </a>
              </td>
              <td>
                <a href="http://twitter.com/<%= user_say['from_user'] %>/status/<%= user_say['id_str'] %>" target="_blank">
                  <%= user_say["text"] %>
                </a>
              </td>
            </tr>
          <% end %>       
      </table>  
    </div>
  <% end %>
  <br/><br/>
</div>