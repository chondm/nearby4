<div class="events_index">
  <span><h2>Events</h2></span>
  <% unless @events.blank? %>
    <% @events.each do |event| %>
      <div style="border-bottom: 1px dotted gray;">
        <b><%= event.name %> -  <%= event.address %></b><br/>
        <%= event.description %><br/>
      </div>    
      <br/>
          <% end %>
    
      <% end %>
      No events near you right now. <a href="#"> Create an event </a>
</div>